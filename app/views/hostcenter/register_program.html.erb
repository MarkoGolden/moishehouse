<script type="text/javascript">
  $(document).ready(function(){
    $('#opened_date').datepicker({ dateFormat: "dd/mm/yy"});
  });
</script>
<header class="jumbotron subhead" id="overview">
  <div class="container">
	<h2>MHWOW Program Registration</h2>    
  </div>
</header>
<legend style="margin-bottom: -20px;">Program Details</legend>
<%= form_for :program, :url => host_center_programs_create_path, :html => { :class => 'form-horizontal'} do |f| %>
<section class="section-with-margin" id="basic">
		<div class="row">
			<div class="span7">
			  <div class="control-group">
			    <%= f.label :program_type_id, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.collection_select :program_type_id, @program_types, :id, :name, :class => 'input-large', :prompt => "Select a program type..." %>
			    </div>
			  </div>
			  <div class="control-group">
			    <%= f.label :date, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.text_field :date, :class => 'input-large', :id => 'opened_date' %>
			    </div>
			  </div>
			  <div class="control-group">
			    <%= f.label :time, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.text_field :time, :class => 'input-large' %>
			    </div>
			  </div>
			  <div class="control-group">
			    <%= f.label :name, 'Program name', :class => 'control-label' %>
			    <div class="controls">
			        <%= f.text_field :name, :class => 'input-large', :placeholder => "What is the name of your program?"%>
			    </div>
			  </div>
			  <div class="control-group">
			    <%= f.label :expected_attendance, :class => 'control-label' %>
			    <div class="controls">
			      <%= f.text_field :expected_attendance, :class => 'input-large', :style => "width: 20px;", :placeholder => 0  %>
			    </div>
			  </div>
			  <div class="control-group">
			    <%= f.label :buying, "What do you plan on buying for this program?", :class => 'control-label' %>
			    <div class="controls">
			      <%= f.text_area :buying, :class => 'input-large', :size => "5x5" %>
			    </div>
			  </div>
			  <div class="control-group">
			    <%= f.label :description, "Please Provide A Summary Of Your Program And A Brief Explanation Of How You Believe It Will Contribute To A Vibrant Jewish Community", :class => 'control-label' %>
			    <div class="controls">
			      <%= f.text_area :description, :class => 'input-large', :size => "5x5" %>
			    </div>
			  </div>
			  <div class="checkboxes" style="color: red;">
			  <div class="control-group">
			  	<p>I understand that...</p>
			  	<%= f.check_box :reimbursed, :class => 'control-label',:style => 'margin-left: 80px;'%> 
				  <div class="controls"><%= f.label :reimbursed, "I will not be reimbursed unless this program is pre-approved by Without Walls. I will be notified via email when my program is pre-approved.", :class => "checkbox inline", :style => "margin-top: -20px;" %>
				  </div>
			  </div>		  
			  <div class="control-group">
			    <%= f.check_box :itemized, :class => 'control-label',:style => 'margin-left: 80px;'%> 
				  <div class="controls"><%= f.label :itemized, "I must submit legible, date-stamped, itemized receipts within 14 days of my program. I understand that after 14 days, reimbursement is not guaranteed.", :class => "checkbox inline", :style => "margin-top: -20px;"%>
				  </div>
			  </div>			      			   			  
			  <div class="control-group">
			    <%= f.check_box :submit_photos, :class => 'control-label', :style => 'margin-left: 80px;' %> 
				  <div class="controls"><%= f.label :submit_photos, "I must submit photos of my program that clearly illustrate the number of people in attendance, at least one of which must display the unique program number. The only exception to the photograph requirement is on Jewish holidays which preclude the taking of photographs (e.g. Shabbat dinner).", :class => "checkbox inline", :style => 'margin-top: -20px;'%>
				  </div>
			  </div>			  			  
			  </div>
			    </div>
			  </div>
			</div>
			</div>
	</section>
<fieldset>
	<legend style="margin-bottom: -20px;">Save</legend>
  <div class="form-actions">
    <%= f.submit "Create Program", :class => 'btn btn-large btn-block btn-primary' %>
    <%= link_to "Cancel", residents_programs_path, :class => 'btn btn-large btn-block' %>
  </div>
</fieldset>
</div>
<% end %>
