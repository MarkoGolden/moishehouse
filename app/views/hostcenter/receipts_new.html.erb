<script type="text/javascript">
  $(document).ready(function(){
    $('#opened_date').datepicker({ dateFormat: "yy-mm-dd"});
  });
</script>
<div class="row">

<div class="span9">
	<div class="receipt-form">
		<%= form_for :receipt, :url => host_center_receipts_create_path, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
			<%= f.hidden_field :house_id, :value => current_user.house_id%>
<section class="section-with-margin" id="basic">
  <fieldset>
	<legend>Upload Receipt</legend>
	<div class="row" id="receipts-new" style="margin-top:-30px;">
		<div class="span4">
			  <div class="control-group">
			    <%= f.label :program_id, :class => 'control-label' %>			    
			    <div class="controls">
			    	<%= f.collection_select :program_id, current_user.programs.order("date"), :id, :date_and_name, :class => "input-medium", :prompt => "Select a Program..." %>
			    </div>			    
			  </div>
			  <div class="control-group">
			    <%= f.label :description, :class => 'control-label' %>
			    <div class="controls">
					<%= f.text_area :description, :rows => 3, :cols => 10%>
			    </div>
			  </div>		
			  <div class="control-group">
			    <%= f.label :submitter_id, :class => 'control-label' %>
			    <div class="controls">
					<%= f.hidden_field :submitter_id, :value => current_user.id%>
					<span class="input-large uneditable-input"><%= current_user.fullname %></span>
			    </div>
			  </div>			  
			  <div class="control-group">
			    <%= f.label :amount, :class => 'control-label' %>
			    <div class="controls">
				  <div class="input-prepend">
			        <span class="add-on">$</span>
			      	<%= f.text_field :amount, :class => 'input-small' %>
				  </div>
			    </div>
			  </div>			  
		</div>
		<div class="span3 offset1">
			<div class="receipt-image">
			    <ul class="thumbnails">
				  <li class="span2 offset3">				    
				    <h3>Upload Image</h3>				    
					  <p class="text-center">
						<%= f.file_field :receipt %>						
					  </p>				    
				  </li>
				</ul>
			</div>
		</div>
	</div>	
  </fieldset>
</section>
<fieldset>	
  <div class="form-actions">
    <%= f.submit "Upload Receipt", :class => 'btn btn-large btn-block btn-primary' %>
    <%= link_to "Cancel", host_center_receipts_path, :class => 'btn btn-large btn-block' %>
  </div>
</fieldset>
	</div>
</div>
</div>
</div>
<% end %>
